// TextToSpeech.CPP.Lib.dog

requirements = [
    [tagOneOf, Lang, [CPP]]
]

interface={
    provides=[TextToSpeech_implementation]
    packages = [
        { packageName = 'mimic1'
          fetchMethod = 'git:https://github.com/MycroftAI/mimic1.git'
