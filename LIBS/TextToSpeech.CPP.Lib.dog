          buildCmds   = { Linux = {buildCmd = './dependencies.sh --prefix="/usr/local" && ./autogen.sh && ./configure --prefix="/usr/local" && make'
                                    }
                        Windows = {buildCmd = 'cmake . && make'}
            }
        }
    ]
    libFiles=[]
    headers  = []
}