        me int:   Ji <- 45678
        me BigFrac: J <- Ji
        if(J==45678){print("TEST 6 PASS: " ,toString(J), "\n")}
        else{print("TEST 6 FAIL: " ,toString(J), "\n")}
    }
    void: testFlexNum() <- {
        print("FLEX NUM TESTS\n")
        // TEST 1
        me FlexNum: A <- 100000000
        me FlexNum: B <- 555555555
        me FlexNum: C <- A + B
